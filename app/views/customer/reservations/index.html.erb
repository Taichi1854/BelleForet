<div class="container">
    <div class="row">
        <div class="text-color">


            <div class="row title">
                <h2>予約状況一覧</h2>
            </div>


            <div class=font>
            	<% @reservations.each do |reservation| %>

                <h2>苗字</h2>
                <div class="space">
                	<%= @reservations.first_name %>
                </div>


                <h2>名前</h2>
                <div class="space">
                	<%= @reservations.last_name %>
                </div>


                <h2>苗字 (カナ)</h2>
                <div class="space">
                	<%= @reservations.first_name_kana %>
                </div>


                <h2>名前 (カナ)</h2>
                <div class="space">
                	<%= @reservations.last_name_kana %>
                </div>


                <h2>電話番号 (ハイフンなし)</h2>
                <div class="space">
                	<%= @reservations.tel %>
                </div>


                <h2>メールアドレス</h2>
                <div class="space">
                	<%= @reservations.email %>
                </div>


                <h2>人数</h2>
                <div class="space">
                	<%= @reservations.people %>
                </div>


                <h2>備考</h2>
                <div class="space">
                	<%= @reservations.body %>
                </div>


                <h2>予約日時</h2>
                <div class="space">
                	<%= @reservations.date %>
                </div>

                <% end %>
            </div>


        </div>
    </div>
</div>