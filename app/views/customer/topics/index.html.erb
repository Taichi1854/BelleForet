<div class="container">
    <div class="row">
        <div class="text-color">


            <div class="title">TOPICS</div>
                <div class="row">
                    <div id="topics">
                        <div class="row index_topic">
                            <% @topics.each do |topic| %>
                                <%= link_to topic_path(topic.id) do %>
                                    <%= attachment_image_tag topic, :image, format: 'jpeg', size: "300x300",  fallback: "no_image.jpg"%><br>
                                    <p><%= topic.title %></p>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
        	    <div class="paginate">
                    <%= paginate @topics %>
                </div>
            </div>


        </div>
    </div>
</div>