<div class="container">
    <div class="row">


        <h2>TOPICS</h2>
        <div class="row">
            <div id="topics">
                <% @topics.each do |topic| %>
                    <%= link_to admin_topic_path(topic.id) do %>
                        <%= attachment_image_tag topic, :image, format: 'jpeg', size: "150x150",  fallback: "no_image.jpg"%><br>
                        <p><%= topic.title %></p>
                    <% end %>
                <% end %>
            </div>
        </div>


        <div class="row">
        	<div class="paginate">
                <%= paginate @topics %>
            </div>
        </div>


    </div>
</div>