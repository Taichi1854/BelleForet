<div class="container">
    <div class="row">
        <div class="text-color-mypage">


            <h1>登録情報編集</h1>


            <%= form_for(@customer) do |f| %>

                <div class="row field">
                    <%= f.label "氏名", class: "col-xs-1 control-label　text-left" %>
                    <%= f.text_field :name, class:"form-control" %>
                </div>


                <div class="row field">
                    <%= f.label "メールアドレス", class: "col-xs-2 control-labeltext-left" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                </div>


            </div>


            <div class="row text-color">
                <%= f.submit "編集内容を保存する", class:"btn label-default btn-wide" %>
            <% end %>



        </div>
    </div>
</div>