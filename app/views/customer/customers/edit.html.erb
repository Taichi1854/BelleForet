<div class="container">
    <div class="row">
        <div class="text-color-mypage">


            <h1>登録情報編集</h1>


            <%= form_for(@customer) do |f| %>

                <div class="row">
                    <%= f.label "氏名", class: "col-xs-1 control-label　text-left" %>
                        <div class="row">
                            <div class="col-xs-1 "><strong class="text-righ">（性）</strong></div>
                            <div class="col-xs-2 c_r_last_name_field">
                                <%= f.text_field :last_name, class:"form-control" %>
                        </div>
                        <div class="col-xs-1 test-right"><strong>（名）</strong></div>
                        <div class="field">
                            <%= f.text_field :first_name, class:"form-control" %>
                        </div>
                    </div>
                </div>


            <div class="row">
              <%= f.label "フリガナ", class: "col-xs-1 control-label　text-left" %>
                <div class="row">
                  <div class="col-xs-1 test-right"><strong>（セイ）</strong></div>
                  <div class="col-xs-2 field">
                    <%= f.text_field :last_name_kana, class:"form-control" %>
                  </div>
                  <div class="col-xs-1 test-right"><strong>（メイ）</strong></div>
                  <div class="field">
                    <%= f.text_field :first_name_kana, class:"form-control" %>
                  </div>
                </div>
            </div>


            <div class="row">
                <%= f.label "メールアドレス", class: "col-xs-2 control-labeltext-left" %>
                    <div class="row">
                        <div class="col-xs-2">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                        </div>
                    </div>
                </div>
            </div>



            <div class="ec-edit-registration-btn-wrap col-xs-offset-1 col-xs-10", style= "padding-left: 0px">
                <div class="col-xs-4"> <%= f.submit "編集内容を保存する", class:"btn btn-primary", style: "width: 12em" %>
            <% end %>



        </div>
    </div>
</div>