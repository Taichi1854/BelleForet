<div class="container">
    <div class="row">
        <div class="text-color-mypage">


            <div class="row space">
                <h1>MY PAGE</h1>
            </div>


            <div class="row space2">
                <h2>登録情報</h2>
            </div>


            <div class="row space">

                <div class="space">
                	<%= link_to '編集する', edit_customer_path(@customer), class: "btn btn-primary" %>
                </div>


                <div class="space">
                	<%= link_to 'パスワードを変更する', edit_customer_password_path, class: "btn btn-primary" %>
                </div>

            </div>


            <div class="row">

                <div class="row space">
                    <h4>氏名</h4>
                    <%= @customer.name %>
                </div>


                <div class="row space">
                    <h4>メールアドレス</h4>
                    <%= @customer.email %>
                </div>

            </div>


            <div class="row space2">

                <h3>予約状況</h3>
                <div class="space">
                    <%= link_to "一覧を見る", reservations_path, class: "btn btn-primary" %>
                </div>

            </div>


        </div>
    </div>
</div>