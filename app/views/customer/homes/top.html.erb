<div class="container">
    <div class="row">
        <div class="text-color">


            <div class="row">
                <div class="top_image">

                    <%= image_tag asset_path("photo1.jpg") %>

                    <div>
                        <%= image_tag asset_path("photo2.jpg"), class: "slick" %>
                        <%= image_tag asset_path("photo3.jpg"), class: "slick" %>
                    </div>

                    <%= image_tag asset_path("photo4.jpg") %>

                    <div>
                        <%= image_tag asset_path("photo5.jpg"), class: "slick" %>
                        <%= image_tag asset_path("photo6.jpg"), class: "slick"  %>
                    </div>

                    <%= image_tag asset_path("photo7.jpg") %>

                </div>
            </div>




            <div class="row topics_prevention">
                <%= link_to "新型コロナウイルス等の感染予防対策について", topic_path(@topic.id), class:"prevention" %>
            </div>


            <div class="title">TOPICS</div>
                <div class="row">
                    <div id="topics">
                        <div class="row top_topic">
                            <% @topics.first(6).each do |topic| %>

                                <%= link_to topic_path(topic.id) do %>
                                    <%= attachment_image_tag topic, :image, format: 'jpeg', size: "300x300",  fallback: "no_image.jpg"%><br>
                                    <p><%= topic.title %></p>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row more">
                <%= link_to "READ MORE", topics_path %>
            </div>


        </div>
    </div>
</div>