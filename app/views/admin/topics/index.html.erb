<div class="container">
    <div class="row">




            <%= form_for(@topic,url:admin_topics_path) do |f| %>

                <div class="field">
                    <%= f.label :Title %>
                    <%= f.text_field :title %>
                </div>


                <div class="field">
                    <%= f.label :Text %>
                    <%= f.text_area :body %>
                </div>


                <div class="field">
                    <%= f.label :image %>
		            
                </div>


                <div class="actions">
                    <%= f.submit "Create TOPIC" %>
                </div>

            <% end %>


            <h2>TOPIC</h2>
            <div class="row">
                <div id="topics">
                    <% @topics.each do |topic| %>
                        <%= link_to admin_topic_path(topic.id) do %>
                            <%= attachment_image_tag topic, :image, format: 'jpeg', size: "150x150",  fallback: "no_image.jpg"%><br>
                            <p><%= topic.title %></p>
                        <% end %>
                    <% end %>
                </div>
            </div>


    </div>
</div>