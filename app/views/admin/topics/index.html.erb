<div class="container">
    <div class="row">
        <div class="text-color">


            <div class="row">
                <div class="col-xs-7">
                    <%= form_for(@topic,url:admin_topics_path) do |f| %>

                        <div class="field">
                            <%= f.label :image %>
                            <%= f.attachment_field :image %>
                        </div>


                        <div class="field">
                            <%= f.label :Title %>
                            <%= f.text_field :title, rows:'2', class: "form-control", placeholder: "Titleをここに" %>
                        </div>


                        <div class="field">
                            <%= f.label :Text %>
                            <%= f.text_area :body, rows:'5', class: "form-control", placeholder: "TEXTをここに" %>
                        </div>


                        <div class="actions">
                            <%= f.submit "Create TOPIC" %>
                        </div>

                    <% end %>
                </div>
            </div>


            <div class="row">
                <div class="topics">
                    <div class="col-sm-8">
                    <h2>TOPIC一覧</h2>
                    <div id="topics">
                        <% @topics.each do |topic| %>
                            <%= link_to admin_topic_path(topic.id) do %>
                                <%= attachment_image_tag topic, :image, format: 'jpeg', size: "150x150",  fallback: "no_image.jpg"%><br>
                                <p><%= topic.title %></p>
                            <% end %>
                        <% end %>
                    </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>