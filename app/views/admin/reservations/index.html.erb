<div class="container">
	<div class="row">
		<div class="text-color">


            <div class="row title">
                <h2>予約状況一覧</h2>
            </div>

<% @reservation.each do |reservation| %>
                <h2>苗字</h2>
                <div class="space">
                	<%= @reservation.first_name %>
                </div>


                <h2>名前</h2>
                <div class="space">
                	<%= @reservation.last_name %>
                </div>


                <h2>苗字 (カナ)</h2>
                <div class="space">
                	<%= @reservation.first_name_kana %>
                </div>


                <h2>名前 (カナ)</h2>
                <div class="space">
                	<%= @reservation.last_name_kana %>
                </div>


                <h2>電話番号 (ハイフンなし)</h2>
                <div class="space">
                	<%= @reservation.tel %>
                </div>


                <h2>メールアドレス</h2>
                <div class="space">
                	<%= @reservation.email %>
                </div>


                <h2>人数</h2>
                <div class="space">
                	<%= @reservation.people %>
                </div>


                <h2>備考</h2>
                <div class="space">
                	<%= @reservation.body %>
                </div>


                <h2>予約日時</h2>
                <div class="space">
                	<%= @reservation.date %>
                </div>
<% end %>

        </div>
    </div>
</div>